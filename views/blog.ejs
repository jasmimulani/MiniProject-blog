<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bolg</title>
    <style>
        .gradient-custom-3 {
            background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));
            background: linear-gradient(to right, rgba(132, 250, 176, 0.5), rgba(143, 211, 244, 0.5));
        }

        .gradient-custom-4 {
            background: -webkit-linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1));
            background: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1));
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<!-- background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp'); -->
<body>
    <section class="vh-100 bg-image"
        style="  height: 100%">
        <div class="mask d-flex align-items-center h-auto gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-2">
                                <h2 class="text-uppercase text-center mb-3">My Bolg</h2>
                                <form action="/blog/" method="post">
                                    <div data-mdb-input-init class="form-outline mb-1">
                                        <input type="text" id="form3Example4cg" name="title"
                                            class="form-control form-control-lg" placeholder="Enter your Title"
                                            required />
                                    </div>
                                    <br>
                                    <div data-mdb-input-init class="form-outline mb-1">
                                        <input type="text" id="form3Example4cg" name="description"
                                            class="form-control form-control-lg" placeholder="Enter your Description"
                                            required />
                                    </div>
                                    <div class="d-flex justify-content-center ">
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body me-3">Add
                                            Blog</button>
                                        </div>
                                        
                                    </form>
                                    <div class="d-flex justify-content-center me-3">
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body"><a href="/user/login">Logout</a></button>
                                    </div>
                            </div>
                        </div>
                    </div>
                    <div class="bg-white mt-5 p-2 w-full" style="border-radius: 15px;">
                        <div class="p-2">
                                <% for(let i=0; i < blogs.length; i++) {%>
                                    <div class="p-2">
                                        <h4 class="text-center">
                                            <%= blogs[i].title %>
                                        </h4>
                                        <span>
                                            <%= blogs[i].description %>
                                            <h6 class="flex justify-content-end">
                                                <%= blogs[i].createdAt.toLocaleDateString() %>
                                            </h6>
                                        </span>
                                    </div>
                                    <hr/>
                                <% } %>
                            </div>
                     </div>
                </div>
            </div>
        </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
